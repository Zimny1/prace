<Window x:Class="losowanie_tablic_mroz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:losowanie_tablic_mroz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Label FontSize="20" Margin="10">Zakres losowania:</Label>
                <TextBox x:Name="zakres" Width="50" Height="30" FontSize="20" Margin="10"></TextBox>
                <Button Content="Losuj" Height="30" Width="70" FontSize="18" Margin="10" Click="losuj_clicked" />
            <Label x:Name="blad" Foreground="Red"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBox x:Name="tab1" Width="150" Height="300" FontSize="20" TextAlignment="Center" Margin="10"></TextBox>
                <TextBox x:Name="tab2" Width="150" Height="300" FontSize="20" TextAlignment="Center" Margin="10"></TextBox>
                <TextBox x:Name="tabwynik" Width="150" Height="300" FontSize="20" TextAlignment="Center" Margin="10"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                <Button Content="+" Height="100" Width="100" FontSize="50" Margin="10" Click="dodaj_clicked" />
                <Button Content="-" Height="100" Width="100" FontSize="50" Margin="10" Click="odejmij_clicked" />
            </StackPanel>
        </StackPanel>

    </StackPanel>

</Window>
